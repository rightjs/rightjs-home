<div id="sidebar">
<% if request.request_uri.starts_with?('/docs') %>
  <%= render 'layouts/search_box' %>

  <div class="box" id="api-lists">
    <%= right_js_classes_menu %>
  </div>
<% else -%>
  <div class="box" id="download-box">
    <h1>Get it!</h1>
    <ul>
      <%= menu_link_to "RightJS v#{RIGHTJS_VERSION}", "/builds/current/right.js.zip" %>
    </ul>
  </div>
  
  <%= render 'layouts/search_box' %>
  
  <div class="box">
    <label>Documentation</label>
    <ul>
      <%= menu_link_to 'Getting Started', tutorial_path('getting-started') %>
      <%= menu_link_to 'API-Reference', documentation_path %>
      <%= menu_link_to 'Tutorials', '/tutorials' %>
    </ul>
  </div>
  
  <div class="box">
    <label>Additional</label>
    <ul>
      <%= menu_link_to 'RightJS Goods', goods_path %>
      <%= goods_modules_menu if request.request_uri.starts_with?('/goods/') %>
      <%= menu_link_to 'RightJS UI', '/ui' %>
      <%= ui_modules_menu if request.request_uri.starts_with?('/ui/') %>
      <%= menu_link_to 'Showcases', '/showcases' %>
    </ul>
  </div>
  
  <div class="box">
    <label>Community</label>
    <ul>
      <%= menu_link_to 'Google Group', 'http://groups.google.com/group/rightjs', :target => :_blank %>
      <%= menu_link_to 'Tickets Tracker', RIGHTJS_TICKETS_TRACKER_URL, :target => :_blank %>
      <%= menu_link_to 'Participate!', '/participate' %>
      <%= menu_link_to 'IRC #rightjs', 'irc://irc.freenode.net/rightjs' %>
    </ul>
  </div>
<% end -%>

  <div class="box">
    <ul id="social">
      <li><%= link_to "RSS", posts_path(:format => :rss),      :id => "rss-link"     %></li>
      <li><%= link_to "Twitter", "http://twitter.com/rightjs", :id => "twitter-link" %></li>
      <li><%= link_to "GitHub", "http://github.com/rightjs",   :id => "github-link"  %></li>
    </ul>
  </div>
</div>