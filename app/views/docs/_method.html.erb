<div class="method">
  <a name="<%= method.name %>"></a>
  <h2><%= content_tag(:a, "top &uarr;", :href => "#", :class => "top-anchor") %><%= link_to_unit_method method %></h2>
  
  <p class="semantic">
    <code><%= method.semantic%></code>
  </p>

<% unless method.description.blank? %>
  <h4>Description</h4>
  <%= method.description %>
<% end %>
  
<% unless method.example.blank? %>
  <h4>Example</h4>
  <p>
    <code><%= method.example %></code>
  </p>
<% end %>
</div>