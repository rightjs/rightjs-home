<h2>Dynamically Generated Sliders</h2>
<p>
  <div class="slider-demo" id="d-slider-0"><div class="slider-out" id="slider-out-13">0</div></div>
  <div class="slider-demo" id="d-slider-1"><div class="slider-out" id="slider-out-14">0</div></div>
  
  <div class="slider-demo-vertical" id="d-slider-2"><div class="slider-out" id="slider-out-15">0</div></div>
  <div class="slider-demo-vertical" id="d-slider-3"><div class="slider-out" id="slider-out-16">0</div></div>
  <div class="slider-demo-vertical" id="d-slider-4"><div class="slider-out" id="slider-out-17">0</div></div>
  <div class="slider-demo-vertical" id="d-slider-5"><div class="slider-out" id="slider-out-18">0</div></div>
  <div class="slider-demo-vertical" id="d-slider-6"><div class="slider-out" id="slider-out-19">0</div></div>
  <div class="slider-demo-vertical" id="d-slider-7"><div class="slider-out" id="slider-out-20">0</div></div>
  <div class="slider-demo-vertical" id="d-slider-8"><div class="slider-out" id="slider-out-21">0</div></div>
  <div class="slider-demo-vertical" id="d-slider-9"><div class="slider-out" id="slider-out-22">0</div></div>
  <div class="slider-demo-vertical" id="d-slider-10"><div class="slider-out" id="slider-out-23">0</div></div>
  <div class="slider-demo-vertical" id="d-slider-11"><div class="slider-out" id="slider-out-24">0</div></div>
  <div class="slider-demo-vertical" id="d-slider-12"><div class="slider-out" id="slider-out-25">0</div></div>

  <script type="text/javascript">
  // <![CDATA[
  new Slider().insertTo('d-slider-0', 'top').assignTo('slider-out-13').fire('change', 0);
  new Slider({min: -100, max: 100,value: 0}).insertTo('d-slider-1', 'top').assignTo('slider-out-14');
  
  // list of vertical sliders
  var slider_num    = 2;
  var out_num       = 15
  var min_value     = -10;
  var max_value     = 10;
  var sliders_count = 11;
  
  for (var i=0; i < sliders_count; i++) {
    new Slider({direction: 'y', min: min_value, max: max_value
    }).insertTo('d-slider-'+(slider_num+i))
      .assignTo('slider-out-'+(out_num+i))
      .setValue(min_value + (max_value - min_value)/(sliders_count-1) * i);
  }
  // ]]>
  </script>
  
  <div style="clear:both"></div>
</p>
